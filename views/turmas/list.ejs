<%- include('../partials/header') %>

<div class="container">
    <h1>Lista de Turmas</h1>

    <a href="/turmas/novo" class="btn btn-primary">Nova Turma</a>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% turmas.forEach(turma => { %>
            <tr>
                <td><%= turma.id %></td>
                <td><%= turma.nome %></td>
                <td>
                    <a href="/turmas/editar/<%= turma.id %>" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/turmas/deletar/<%= turma.id %>" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<%- include('../partials/footer') %>
