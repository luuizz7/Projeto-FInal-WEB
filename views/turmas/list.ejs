<%- include('../partials/header') %>

<main class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-collection-fill"></i> Lista de Turmas</h1>
        <a href="/turmas/nova" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i> Nova Turma
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome da Turma</th>
                        <th class="text-center">Nº de Alunos</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (turmas.length > 0) { %>
                        <% turmas.forEach(turma => { %>
                            <tr>
                                <td><%= turma.nome %></td>
                                <td class="text-center"><%= turma.dataValues.totalAlunos %></td>
                                <td class="text-end">
                                    <a href="/turmas/editar/<%= turma.id %>" class="btn btn-sm btn-primary btn-icon" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <form action="/turmas/deletar/<%= turma.id %>" method="POST" class="d-inline" onsubmit="return confirm('Atenção: excluir uma turma removerá a associação de todos os alunos a ela. Deseja continuar?');">
                                        <button type="submit" class="btn btn-sm btn-danger btn-icon" title="Excluir">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="text-center">Nenhuma turma cadastrada.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
