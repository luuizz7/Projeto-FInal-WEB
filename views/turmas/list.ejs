



<%- include('../partials/header') %>

<div class="container">

    <h2 class="mb-3">Lista de Turmas</h2>

    <a href="/turmas/novo" class="btn btn-primary mb-3">Nova Turma</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Turno</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            <% if (turmas && turmas.length > 0) { %>
                <% turmas.forEach(turma => { %>
                    <tr>
                        <td><%= turma.id %></td>
                        <td><%= turma.nome %></td>
                        <td><%= turma.turno %></td>
                        <td>
                            <a href="/turmas/editar/<%= turma.id %>" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/turmas/deletar/<%= turma.id %>" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">Nenhuma turma encontrada.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

</div>

<%- include('../partials/footer') %>
