<%- include('../partials/header') %>

<main class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people-fill"></i> Lista de Alunos</h1>
        <a href="/alunos/novo" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i> Novo Aluno
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Matrícula</th>
                        <th>Turma</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (alunos.length > 0) { %>
                        <% alunos.forEach(aluno => { %>
                            <tr>
                                <td><%= aluno.nome %></td>
                                <td><%= aluno.matricula %></td>
                                <td><%= aluno.Turma ? aluno.Turma.nome : 'Sem Turma' %></td>
                                <td class="text-end">
                                    <a href="/alunos/editar/<%= aluno.id %>" class="btn btn-sm btn-primary btn-icon" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <form action="/alunos/deletar/<%= aluno.id %>" method="POST" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este aluno?');">
                                        <button type="submit" class="btn btn-sm btn-danger btn-icon" title="Excluir">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">Nenhum aluno cadastrado.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
